<!DOCTYPE html>
<html>
  <head>
    <title>RoRCapstoneActivityTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <% if notice.present? %>
        <div class="notice">
          <p> <%= notice %> </p>
        </div>
      <% end %>
      <% if alert.present? %>
        <div class="alert">
          <p> <%= alert %> </p>
        </div>
      <% end %>
    </div>
    <div class="main-container d-flex align-items-center justify-content-center">
      <%= yield %>
    </div>
  </body>
</html>
