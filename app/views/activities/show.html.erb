<main class="w-100 h-100 d-flex justify-content-center align-items-center p-0 m-0">
  <div class="my-activities-container d-flex justify-content-center align-items-center flex-column p-0 m-0">
    <header>
      <h1><%= @activity.name %></h1>
      <p>Created <%= time_ago_in_words(@activity.created_at) %> ago.</p>
    </header>
    <div class="activities-show-card">
      <div class="h-50 w-100 d-flex justify-content-center flex-row align-items-center">
        <div class="w-50 h-100 d-flex  flex-column justify-content-center align-items-center">
          <p><i class="<%= @activity.group_icon %>"></i></p>
          <p><%= @activity.group_name %></p>
        </div>
        <div class="w-50 h-100 d-flex justify-content-center align-items-center">
          <p><%= time_converter(@activity.amount) %></p>
        </div>
      </div>
      <div class="h-50 w-100 d-flex justify-content-center flex-row align-items-center">
        <div class="w-50 h-100 d-flex justify-content-center align-items-center">
          <p><%= @activity.calories %></p>
        </div>
        <div class="w-50 h-100 d-flex flex-column">
          <div class="d-flex w-100 h-50 flex-row">
            <div class="h-100 w-50 d-flex justify-content-center align-items-center">
              <p><i class="<%= calories_badges_gen(@activity) %>"></i></p>
            </div>
            <div class="h-100 w-50 d-flex justify-content-center align-items-center">
              <p><%= calories_ranker_phrases(@activity) %></p>
            </div>
          </div>
          <div class="d-flex w-100 h-50 flex-row">
            <div class="h-100 w-50 d-flex justify-content-center align-items-center">
              <p><%= calories_per_hour_calc(@activity) %></p>
            </div>
            <div class="h-100 w-50 d-flex justify-content-center align-items-center">
              <p><%= calories_per_minute_calc(@activity) %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>